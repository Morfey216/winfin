include ../button/button

mixin sample(data, elementBaseClass)
  div(class='sample')&attributes(attributes)
    if (data.name)
      h3.sample__name!= data.name
    div.sample__image(class= elementBaseClass ? elementBaseClass + '__sample-image' : '')
      img(src='img/' + data.image width=data.w height=data.h alt= data.alt)
    if (data.title)
      h3.sample__title!= data.title
    each parametr in data.params
      p.sample__parametr!= parametr
    p.sample__price Цена от
      |
      |
      span!= data.price
      |
      | руб.
    +button('Рассчитать', 'orange')(type="button").sample__calc-btn
