      {
        image: 'handle.jpg',
        w: 174,
        h: 173,
        alt: 'Ручки',
        linkTitle: 'Ручки',
      },
      {
        image: 'safety.jpg',
        w: 174,
        h: 173,
        alt: 'Безопасность',
        linkTitle: 'Безопасность',
      },
      {
        image: 'ventilation.jpg',
        w: 174,
        h: 173,
        alt: 'Проветривание',
        linkTitle: 'Проветривание',
      },
      {
        image: 'locks.jpg',
        w: 174,
        h: 173,
        alt: 'Замки',
        linkTitle: 'Замки',
