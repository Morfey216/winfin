    ]

section.additions.container
  +title('Что у нас есть к окнам?', 'section-nodecor').additions__title
  div.additions__list
    each addition in additionsList
      div.additions__item
        img(src="img/additions/" + addition.image width=addition.w height=addition.h alt=addition.alt).additions__item-image
        a(href="#").additions__item-link #{addition.linkTitle}
