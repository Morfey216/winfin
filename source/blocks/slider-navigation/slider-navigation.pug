include ../svg/svg

mixin slider-navigation(hasPagination, elementBaseClass)
  div(class="slider-navigation" + (attributes.class ? ' ' + attributes.class : ''))
    button.slider-navigation__btn.slider-navigation__btn--prev(class=elementBaseClass ? elementBaseClass + '__navigation-btn-prev': '' type="button")
      span.visually-hidden Назад
      +svg('arrow-short-down')(width="7" height="4").slider-navigation__icon.slider-navigation__icon--prev
    if (hasPagination)
      div.slider-navigation__pagination
    button.slider-navigation__btn.slider-navigation__btn--next(class=elementBaseClass ? elementBaseClass + '__navigation-btn-next': '' type="button")
      span.visually-hidden Вперед
      +svg('arrow-short-down')(width="7" height="4").slider-navigation__icon.slider-navigation__icon--next
